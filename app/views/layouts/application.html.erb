<!DOCTYPE html>
<html>
<head>
  <title>Howto</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% flash.each do |kind, message| %>
<div class="alert" id="<%= kind %>">
	<%= message %>
</div>
<% end %>

<div class="container">
	<%= yield %>
</div>

</body>
</html>
