<h2><%= @task.name %></h2>
<ol>
	<% @task.steps.each do |step| %>
	<li><%= link_to step.name, [@task, step] %>
		<%= link_to(raw("<i class=\"icon-trash\"></i>"), [@task, step], :method => :delete, :confirm => "Are you sure you want to delete this step?", :class => "btn btn-danger btn-small") %>
	</li>
	<% end %>
</ol>
<p><%= link_to "Add a Step", new_task_step_path(@task), :class => "btn btn-primary" %></p>
<p><%= link_to "All Tasks", tasks_path %></p>
